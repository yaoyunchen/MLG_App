<div class="row" ng-controller="matchPendingController">
  <div class="col-title">
    <h3>
      =This is the pending match page=
    </h3>
  </div>
  <br/>
  <!-- pending match requests list starts here -->
  <div class="col-sm-12" ng-repeat="request in matchRequestList">
    <div class="col-sm-12 pending-match-rows">
      <div class="col-sm-2">
        <img class="selectChampIcon" ng-src="{{request.image}}"/>
      </div>
      <div class="col-sm-2">
        <div>Player #1</div>
        <div>{{request.username1}}</div>
      </div>
      <div class="col-sm-1">
        <div>VS</div>
      </div>
      <div class="col-sm-2">
        <div>Player #2</div>
        <div>{{request.username2}}</div>
      </div>
      <div class="col-sm-2">
        <div> 
          ${{request.bet}}
          <br/> 
          on {{request.bettype_str}}
        </div>
      </div>
      <div class="col-sm-2">
        {{request.status_str}}
        <br/>
        <small>
          Time Left: {{request.time_left.minutes}}:{{request.time_left.seconds}}
        </small>
      </div>
      <div class="col-sm-1">
        <button ng-show="request.status==1" ng-click="accept(request.id)">ACCEPT</button>
        <button ng-show="request.status==2" ng-click="cancel(request.id)">CANCEL</button>
      </div>
    </div>
  </div>
</div>
<div class="row row-first" ng-controller="loginController">
  <div class="col-sm-12 col-title">
    <h1>Log In</h1>
  </div>
  <br/>
  <div class="col-sm-12"> 
    <form role="form" class="form" name="loginForm" ng-submit="validLogin()">
      <p class="alert-msg" ng-show="(loginForm.username.$invalid || loginForm.password.$dirty) && loginForm.submitted">
        Invalid Username and/or Password
      </p>
      <div class="form-group floating-label-form-group">
        <label> Email: </label>
        <input class="form-control" 
          type="email" 
          name="email" 
          placeholder="Enter Email" 
          ng-model="email" 
          required
          />
      </div>
      <div class="form-group floating-label-form-group">
        <label> Password: </label>
        <input class="form-control" 
          type="password" 
          name="password" 
          placeholder="Enter Password" 
          ng-model="password" 
          required>
      </div>
      <br/>
      <div class="col-title">
        <button class="btn btn-danger" type="submit" ng-disabled="loginForm.$invalid">Login</button>
      </div>
    </form>
  </div>
  <div class="col-sm-12 login-error">
    <p>{{ errorMsg }}</p>
  </div>
</div>


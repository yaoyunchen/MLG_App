<div class="row" ng-controller="createMatchController">
  <div class="col-title">
    <h3>
      =This is the match creation page=
    </h3>
  </div>
</div>
<!-- container-->
<div class="row">
  <!-- Selecting champions-->
  <div class="col-sm-6">
    <form name="chooseChampionForm" role="form" class="form" novalidate>
      <label class="col-sm-12 col-title"> =Choose your champion= </label>
      <input class="form-control" type="text" name="chooseChampion" placeholder="Enter Champion Name" ng-model="chooseChampion"></input>
      <div class="col-sm-12 col-title">
        <button class="btn btn-danger" ng-click="browseChamps()">Browse</button>
        <button class="btn btn-danger" type="submit" ng-disabled="chooseChampionForm.$invalid">Lock In</button>
      </div>
    </form>
  </div>
  <!-- Filling up creation form-->
  <div class="col-sm-6">
    <form role="form" class="form" name="createMatchForm" novalidate>
      <div>
        <label>Invite Player:</label>
        <input type="text" name="username" placeholder="Enter Summoner Name" ng-model="username" required>
        <p ng-show="(username != null)">Inviting: {{username}}</p>
      </div>
      <div>
        <label>Bet Amount:</label>
        <input type="number" name="bet" placeholder="Enter Bet Amount" ng-model="bet" required >
        <button ng-click="min()">MIN</button>
        <button ng-click="max()">MAX</button> 
      </div>
      <p ng-show="(bet != null)">Betting: ${{bet}}</p>
      <div>
        <input type="radio" ng-model="betType" value="closeTrue"> Close Match </input>
        <input type="radio" ng-model="betType" value="closeFalse"> Big Win </input>
      </div>
      <br/>
      <div>
        <button class="btn btn-danger" type="submit" ng-disabled="createMatchForm.$invalid">Send Invite</button>
      </div>
    </form>
  </div>
</div>
